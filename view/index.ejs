<!DOCTYPE html>
<html lang="nl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Match Your Voice</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="css/util.css">
</head>

<body>
    <header>
        <h1>Ontdek</h1>
        <h7>Welkom <%= user.naam %></h7>
    </header>
    <main>
        <div class="ontdekhome">
            <% data.forEach(function(person, index){ %>
                <article class="ontdekprofile">
                <input class="play-button" type="button" value="" onclick="(playAudio())">
                <audio id="spraak">
                    <source src="/spraak/<%= person.id %>.mp3" type="audio/mp3" />
                </audio>
                <img class="like" src="images/likebutton.png" alt=""> <img class="dislike" src="images/dislikebutton.png" alt="">
                <section class="introductie">
                    <h3><%= person.naam %></h3>
                    <footer><%= person.leeftijd %></footer>
                </section>
            </article>
            <% }) %>
        </div>
    </main>
    <footer>
        <nav class="cmda-tabbar">
            <ul>
                <li><a href="/">Ontdek</a></li>
                <li><a href="messages.ejs">Berichten</a></li>
                <li><a href="loggedprofile.ejs">Profiel</a></li>
            </ul>
        </nav>
    </footer>

    <script type="text/javascript" src="/index.js">

    </script>
</body>

</html>
